# EditorConfig is awesome: http://EditorConfig.org
#
# top-most EditorConfig file
root = true

# Python scripts
[*.py]
indent_style = space
indent_size = 4
max_line_length = 90
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown documentation files
[*.md]
indent_size = 2
indent_style = space
max_line_length = 100
trim_trailing_whitespace = true

# CI configuration files
[{.travis.yml,appveyor.yml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
